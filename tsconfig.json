{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES6",
    "module": "commonjs",
    "composite": true,
    "incremental": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,
    "removeComments": true,
    "strict": true,
    "strictPropertyInitialization": false, 
    "baseUrl": "./",
    "esModuleInterop": true,
    "paths": {
      "~/*": ["src/*"],
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "jest.config.js"
  ]
}
